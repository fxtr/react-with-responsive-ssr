{
  "name": "react-with-responsive-ssr",
  "version": "1.0.2",
  "description": "High-Order Component to display based on media breakpoints with support for Server-Side Rendering",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Fixter",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kametventures/react-with-responsive-ssr.git"
  },
  "keywords": [
    "react",
    "responsive",
    "react-responsive",
    "react-with-responsive",
    "ssr",
    "media-query",
    "media-queries",
    "matchMedia",
    "next",
    "nextjs",
    "next.js",
    "css"
  ],
  "scripts": {
    "build": "npm run clean && babel src -d dist",
    "prepare": "npm run build",
    "release": "np --no-release-draft",
    "clean": "rimraf dist",
    "test": "run-s test:lint test:coverage",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:lint": "eslint .",
    "test:lint:fix": "eslint --fix .",
    "test:lint:staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint:staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test:lint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@fixter/eslint-config-react": "^0.0.5",
    "@testing-library/react": "^9.3.2",
    "babel-jest": "^24.9.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^9.4.3",
    "np": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty": "^2.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0"
  }
}
